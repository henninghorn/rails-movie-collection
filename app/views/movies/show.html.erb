<div class="p-16 mx-auto max-w-screen-xl">
        <div class="flex">
            <div>
                <div class="bg-gray-400 bg-center bg-cover h-96 w-64 rounded-lg shadow-md" style="background-image: url(<%= @movie.omdb('poster') %>)"></div>
                <div class="p-2 grid grid-cols-2 gap-4 mt-4 w-64">
                    <%= link_to 'Edit', edit_movie_path(@movie), :class => "border border-gray-500 px-3 py-1 text-xs rounded bg-gray-800 text-gray-200 text-center font-semibold" %>
                    <%= link_to 'Delete', @movie, method: :delete, data: { confirm: 'Are you sure?' }, :class => "border border-gray-500 px-3 py-1 text-xs rounded bg-gray-800 text-red-300 text-center font-semibold" %>
                    <%= link_to 'Back to overview', movies_path, :class => "col-span-2 border border-gray-500 px-3 py-1 text-xs rounded bg-gray-800 text-gray-200 text-center font-semibold" %>
                </div>
            </div>

            <div class="pl-12">
                <h1 class="text-white text-6xl font-semibold flex items-center">
                    <%= @movie.title %>

                    <span class="text-gray-400 text-2xl ml-3 font-normal">
                        <%= @movie.omdb('year') %>
                    </span>
                </h1>

                <div class="space-x-1 mt-4">
                <% @movie.omdb('genre').split(", ").each do |genre| %>
                    <span class="rounded-full bg-gray-700 text-gray-100 px-3 py-1 text-sm inline-block">
                        <%= genre %>
                    </span>
                <% end %>
                    <span class="rounded-full bg-gray-600 text-gray-100 px-3 py-1 text-sm inline-block">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="-ml-1 h-4 w-4 inline-block align-text-bottom ">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
                        </svg>
                        <%= "#{@movie.omdb('runtime').to_i / 60}h #{@movie.omdb('runtime').to_i % 60}m" %>
                    </span>
                    <span class="rounded-full bg-yellow-400 text-yellow-800 px-3 py-1 text-sm font-medium inline-block">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="-ml-1 h-4 w-4 inline-block align-text-bottom ">
                            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                        </svg>
                        <%= @movie.omdb('imdb_rating') %>
                    </span>
                </div>

                <p class="text-gray-300 text-2xl py-8 mb-8 max-w-lg">
                    <%= @movie.omdb('plot') %>
                </p>

                <div class="grid grid-cols-2 gap-x-4 gap-y-8 max-w-lg">

                    <div>
                        <h2 class="text-gray-300 font-bold text-lg">
                            Actors
                        </h2>
                        <p class="text-gray-400">
                            <%= @movie.omdb('actors') %>
                        </p>
                    </div>

                    <div>
                        <h2 class="text-gray-300 font-bold text-lg">
                            Director
                        </h2>
                        <p class="text-gray-400">
                            <%= @movie.omdb('director') %>
                        </p>
                    </div>

                    
                    <% if @movie.notes != '' %>
                        <div class="col-span-2">
                            <h2 class="text-gray-300 font-bold text-lg">
                                Personal notes
                            </h2>
                            <p class="text-gray-400 font-mono">
                                <%= @movie.notes %>
                            </p>
                        </div>
                    <% end %>

                </div>
            </div>
        </div>
    </div>